<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUnitFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/army_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill">

        <TextView
            android:id="@+id/unit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/unit_pwr_pts"
            android:text="..."/>

        <TextView
            android:id="@+id/unit_pwr_pts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/unit_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="..."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/unit_models"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/army_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill"
        android:text="MODELS"/>

    <LinearLayout
        android:id="@+id/unit_model_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/unit_models"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/unit_weapons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/unit_model_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill"
        android:text="WEAPONS"/>

    <LinearLayout
        android:id="@+id/unit_weapon_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/unit_weapons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/unit_abilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/unit_weapon_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill"
        android:text="ABILITIES"/>

    <LinearLayout
        android:id="@+id/unit_ability_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/unit_abilities"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/codex_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/unit_ability_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill">

        <TextView
            android:id="@+id/codex_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="..."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/codex_models"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/codex_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill"
        android:text="MODELS"/>

    <LinearLayout
        android:id="@+id/codex_model_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/codex_models"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/codex_weapons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/codex_model_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill"
        android:text="WEAPONS"/>

    <LinearLayout
        android:id="@+id/codex_weapon_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/codex_weapons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/codex_abilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/codex_weapon_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp"
        android:background="@drawable/layout_fill"
        android:text="ABILITIES"/>

    <LinearLayout
        android:id="@+id/codex_ability_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/codex_abilities"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>